<!DOCTYPE html>
<html>
<head>
  <title>Menu</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "menu -- Metadata Editor at Northwestern University Library", root_path, :class => "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <%= form_tag(existing_records_edit_path, method: "get", class: "navbar-form navbar-left") do %>
          <div class="form-group">
            <%= text_field_tag(:pid, params[:pid], placeholder: "Enter identifier...", class: "form-control", id: "pid-field", required: "required") %>
          </div>
          <%= submit_tag "Search", :name => nil, id: "search-button", class: "btn btn-default" %>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Help Document", "https://docs.google.com/document/d/1ulpiZOT4f_xBqsqQs-BwFuId3XhedgPfethdjl4J1WA/edit?usp=sharing", :target => "_blank" %></li>
          <li><%= link_to "Cataloging Guidelines", "https://docs.google.com/document/d/1tk7cbK2oh1Sxu7TSKiBiSZH073ivF3KRxzSCgODAfek/edit", :target => "_blank" %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">
    <%= flash_messages %>
  </div>

  <div class="container-fluid">
    <%= yield %>
  <%= debug(params) if Rails.env.development? %>
  <%= "Server restarted at: " + Menu::Application.config.build_identifier if Rails.env.development? || Rails.env.staging? %>
  </div>
</body>
</html>
